<%- include("partials/header") %>
  <!-- debut index.ejs -->

  <h1 class="content-title">Les actualités du blog</h1>
  <div class="pure-g">
    <% for (const article of articles) { %>

      <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
        <header>
          <img class="card-img pure-img" src="/images/<%= article.img %>" alt="<%= article.img_alt %>" />
          <h2>
            <%= article.title %>.
          </h2>
          <div class="card-meta">
            Par <a href="#">
              <%= article.author %>
            </a> dans la catégorie
            <a href="/categorie/<%= article.category.toLowerCase() %>">
              <%= article.category %>
            </a>
          </div>
        </header>
        <p>
          <!-- article.text pour texte en entier ici résumé -->
          <%= article.excerpt %>.
        </p>
        <a class="card-action pure-button" href="/article/<%= article.id %>">Lire l'article</a>
      </article>
      <% } %>
        <!-- fin article.js -->
        <%- include('partials/footer') %>